  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/taskflow-pro.git"
  },
  "keywords": [
    "task-manager",
    "todo",
    "productivity",
    "calendar",
    "ai-assistant",
    "react",
    "firebase",
    "mobile-app"
  ],
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "cap:init": "npx cap init",
    "cap:sync": "npm run build && npx cap sync",
    "cap:ios": "npm run build && npx cap sync ios && npx cap open ios",
    "cap:android": "npm run build && npx cap sync android && npx cap open android",
    "deploy:web": "npm run build && firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only firestore:rules"
  },
  "dependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/core": "^8.1.0",
