rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isMember(members) {
      return isSignedIn() && (request.auth.uid in members);
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn(); // Allow reading other users (for team members)
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // Organizations
    match /organizations/{orgId} {
      allow read: if isMember(resource.data.members);
      allow create: if isSignedIn();
      allow update: if isMember(resource.data.members); // In real app, restrict to owner/admin
    }

    // Teams
    match /teams/{teamId} {
      allow read: if isMember(resource.data.members);
      allow create: if isSignedIn(); // In real app, restrict to org owner
      allow update: if isMember(resource.data.members);
    }

    // Projects
    match /projects/{projectId} {
      allow read: if isSignedIn(); // Validate org membership in app for now, or use get()
      allow create, update, delete: if isSignedIn();
    }

    // Meetings
    match /meetings/{meetingId} {
        allow read: if isMember(resource.data.participants) || (resource.data.orgId != null && isMember(get(/databases/$(database)/documents/organizations/$(resource.data.orgId)).data.members));
        allow create: if isSignedIn();
        allow update: if isMember(resource.data.participants);
    }

    // Resources (Knowledge Hub)
    match /resources/{resourceId} {
        allow read: if isMember(get(/databases/$(database)/documents/organizations/$(resource.data.orgId)).data.members);
        allow create: if isSignedIn(); // In real app, check org membership
        allow update, delete: if resource.data.createdBy == request.auth.uid;
    }
    
    // Tasks collection (Updated for Projects)
    match /tasks/{taskId} {
      // Allow if task belongs to user OR if user is member of the project's team (complex rule, simplified for MVP)
      allow read, write: if isSignedIn(); 
    }
    
    // Subscriptions collection
    match /subscriptions/{userId} {
      allow read: if isOwner(userId);
      allow write: if false; // Only backend can write subscriptions
    }
  }
}
